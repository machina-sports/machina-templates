{
  "openapi": "3.0.3",
  "info": {
    "title": "Machina Sports Data API",
    "description": "Soccer data API by Machina",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.machina.gg/v1/soccer"
    }
  ],
  "paths": {
    "/competitions": {
      "get": {
        "operationId": "get-competitions",
        "summary": "List all available competitions",
        "description": "Returns all soccer competitions/leagues.",
        "parameters": [
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "category",
            "in": "query",
            "description": "Filter by category/country (e.g. 'england', 'germany')",
            "schema": { "type": "string" }
          },
          {
            "name": "type",
            "in": "query",
            "description": "Filter by type: 'league' or 'cup'",
            "schema": { "type": "string" }
          },
          {
            "name": "active",
            "in": "query",
            "description": "Filter by currently active competitions",
            "schema": { "type": "boolean" }
          }
        ],
        "responses": {
          "200": {
            "description": "List of competitions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "competitions": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Competition" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/competitions/{competition_id}/seasons": {
      "get": {
        "operationId": "get-competition-seasons",
        "summary": "Get seasons for a competition",
        "description": "Returns all seasons for a specific competition.",
        "parameters": [
          {
            "name": "competition_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "example": "msd:competition:premier-league"
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "List of seasons",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "competition": { "$ref": "#/components/schemas/Competition" },
                    "seasons": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Season" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/competitions/{competition_id}/info": {
      "get": {
        "operationId": "get-competition-info",
        "summary": "Get competition details",
        "description": "Returns detailed competition information.",
        "parameters": [
          {
            "name": "competition_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Competition details",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Competition" }
              }
            }
          }
        }
      }
    },
    "/seasons/{season_id}/schedule": {
      "get": {
        "operationId": "get-season-schedule",
        "summary": "Get all fixtures for a season",
        "description": "Returns all matches in a season with pagination.",
        "parameters": [
          {
            "name": "season_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "example": "msd:season:premier-league-2025-26"
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Pagination offset",
            "schema": { "type": "integer", "default": 0 }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Max results per page",
            "schema": { "type": "integer", "default": 50 }
          },
          {
            "name": "round",
            "in": "query",
            "description": "Filter by round number",
            "schema": { "type": "integer" }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by status: not_started, live, closed, postponed",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Season schedule",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "season": { "$ref": "#/components/schemas/Season" },
                    "schedules": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/SportEvent" }
                    },
                    "pagination": { "$ref": "#/components/schemas/Pagination" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/seasons/{season_id}/standings": {
      "get": {
        "operationId": "get-season-standings",
        "summary": "Get league standings",
        "description": "Returns league table for a season.",
        "parameters": [
          {
            "name": "season_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "round",
            "in": "query",
            "description": "Standings as of a specific round",
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "League standings",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "standings": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/StandingsGroup" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/seasons/{season_id}/leaders": {
      "get": {
        "operationId": "get-season-leaders",
        "summary": "Get statistical leaders",
        "description": "Returns top scorers, assists, cards for a season.",
        "parameters": [
          {
            "name": "season_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "category",
            "in": "query",
            "description": "Filter by category: goals, assists, yellow_cards, red_cards",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Statistical leaders",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "leaders": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/LeaderCategory" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/seasons/{season_id}/teams": {
      "get": {
        "operationId": "get-season-teams",
        "summary": "Get teams in a season",
        "description": "Returns all teams participating in a season.",
        "parameters": [
          {
            "name": "season_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Teams list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "teams": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Team" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/seasons/{season_id}/missing-players": {
      "get": {
        "operationId": "get-missing-players",
        "summary": "Get injured/suspended players",
        "description": "Returns unavailable players for a season.",
        "parameters": [
          {
            "name": "season_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Missing players by team",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "teams": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "team": { "$ref": "#/components/schemas/Team" },
                          "missing_players": {
                            "type": "array",
                            "items": { "$ref": "#/components/schemas/MissingPlayer" }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/seasons/{season_id}/transfers": {
      "get": {
        "operationId": "get-season-transfers",
        "summary": "Get player transfers",
        "description": "Returns all player transfers for a season.",
        "parameters": [
          {
            "name": "season_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "team_id",
            "in": "query",
            "description": "Filter by team",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Transfer list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "transfers": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Transfer" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/schedule/{date}": {
      "get": {
        "operationId": "get-daily-schedule",
        "summary": "Get all matches on a date",
        "description": "Returns all matches across all competitions for a specific date.",
        "parameters": [
          {
            "name": "date",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "date" },
            "example": "2026-01-22"
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "competition_id",
            "in": "query",
            "description": "Filter by competition",
            "schema": { "type": "string" }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by status",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Daily schedule",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "date": { "type": "string" },
                    "events": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/SportEvent" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/events/{event_id}/summary": {
      "get": {
        "operationId": "get-event-summary",
        "summary": "Get match summary",
        "description": "Returns match summary with scores, teams, venue.",
        "parameters": [
          {
            "name": "event_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "example": "msd:event:12345"
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Match summary",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/EventSummary" }
              }
            }
          }
        }
      }
    },
    "/events/{event_id}/lineups": {
      "get": {
        "operationId": "get-event-lineups",
        "summary": "Get match lineups and formations",
        "description": "Returns starting lineups, substitutes, and formations.",
        "parameters": [
          {
            "name": "event_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Match lineups",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/EventLineups" }
              }
            }
          }
        }
      }
    },
    "/events/{event_id}/statistics": {
      "get": {
        "operationId": "get-event-statistics",
        "summary": "Get match statistics",
        "description": "Returns detailed match statistics (possession, shots, passes, etc).",
        "parameters": [
          {
            "name": "event_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Match statistics",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/EventStatistics" }
              }
            }
          }
        }
      }
    },
    "/events/{event_id}/timeline": {
      "get": {
        "operationId": "get-event-timeline",
        "summary": "Get match timeline/events",
        "description": "Returns all match events (goals, cards, subs, VAR).",
        "parameters": [
          {
            "name": "event_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Match timeline",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/EventTimeline" }
              }
            }
          }
        }
      }
    },
    "/events/{event_id}/players-statistics": {
      "get": {
        "operationId": "get-event-players-statistics",
        "summary": "Get player-level match statistics",
        "description": "Returns individual player statistics for a match.",
        "parameters": [
          {
            "name": "event_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Player statistics",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "event_id": { "type": "string" },
                    "teams": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/TeamPlayerStats" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/events/{event_id}/xg": {
      "get": {
        "operationId": "get-event-xg",
        "summary": "Get expected goals (xG) data",
        "description": "Returns expected goals data for a match.",
        "parameters": [
          {
            "name": "event_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Expected goals data",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/EventXG" }
              }
            }
          }
        }
      }
    },
    "/teams/{team_id}/profile": {
      "get": {
        "operationId": "get-team-profile",
        "summary": "Get team profile with roster",
        "description": "Returns team details, squad list, manager, venue.",
        "parameters": [
          {
            "name": "team_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "example": "msd:team:arsenal"
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Team profile",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/TeamProfile" }
              }
            }
          }
        }
      }
    },
    "/teams/{team_id}/schedule": {
      "get": {
        "operationId": "get-team-schedule",
        "summary": "Get team schedule and recent results",
        "description": "Returns upcoming matches and recent results for a team.",
        "parameters": [
          {
            "name": "team_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Max results",
            "schema": { "type": "integer", "default": 20 }
          }
        ],
        "responses": {
          "200": {
            "description": "Team schedule",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "team": { "$ref": "#/components/schemas/Team" },
                    "events": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/SportEvent" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/teams/{team_id}/versus/{opponent_id}": {
      "get": {
        "operationId": "get-head-to-head",
        "summary": "Get head-to-head between two teams",
        "description": "Returns match history between two teams.",
        "parameters": [
          {
            "name": "team_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "opponent_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Max results",
            "schema": { "type": "integer", "default": 10 }
          }
        ],
        "responses": {
          "200": {
            "description": "Head-to-head data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "teams": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Team" },
                      "maxItems": 2
                    },
                    "events": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/SportEvent" }
                    },
                    "summary": { "$ref": "#/components/schemas/H2HSummary" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/players/{player_id}/profile": {
      "get": {
        "operationId": "get-player-profile",
        "summary": "Get player profile and career stats",
        "description": "Returns player biography, career stats.",
        "parameters": [
          {
            "name": "player_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Player profile",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PlayerProfile" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Competition": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "msd:competition:premier-league" },
          "name": { "type": "string", "example": "Premier League" },
          "category": {
            "type": "object",
            "properties": {
              "id": { "type": "string", "example": "msd:category:england" },
              "name": { "type": "string", "example": "England" },
              "country_code": { "type": "string", "example": "ENG" }
            }
          },
          "type": { "type": "string", "enum": ["league", "cup"] },
          "gender": { "type": "string", "enum": ["men", "women"] }
        }
      },
      "Season": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "msd:season:premier-league-2025-26" },
          "name": { "type": "string", "example": "Premier League 25/26" },
          "competition_id": { "type": "string" },
          "year": { "type": "string", "example": "25/26" },
          "start_date": { "type": "string", "format": "date" },
          "end_date": { "type": "string", "format": "date" },
          "current": { "type": "boolean" }
        }
      },
      "Team": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "msd:team:arsenal" },
          "name": { "type": "string", "example": "Arsenal" },
          "short_name": { "type": "string", "example": "Arsenal" },
          "abbreviation": { "type": "string", "example": "ARS" },
          "country": { "type": "string", "example": "England" },
          "country_code": { "type": "string", "example": "ENG" }
        }
      },
      "Player": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "msd:player:12345" },
          "name": { "type": "string" },
          "first_name": { "type": "string" },
          "last_name": { "type": "string" },
          "nationality": { "type": "string" },
          "position": { "type": "string", "enum": ["goalkeeper", "defender", "midfielder", "forward"] },
          "jersey_number": { "type": "integer" },
          "date_of_birth": { "type": "string", "format": "date" }
        }
      },
      "Venue": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "city": { "type": "string" },
          "country": { "type": "string" },
          "capacity": { "type": "integer" }
        }
      },
      "SportEvent": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "msd:event:12345" },
          "status": { "type": "string", "enum": ["not_started", "live", "halftime", "ended", "closed", "postponed", "cancelled", "suspended"] },
          "start_time": { "type": "string", "format": "date-time" },
