{
  "openapi": "3.0.0",
  "info": {
    "title": "Sportradar Tennis API",
    "version": "3.0.0",
    "description": "Sportradar Tennis API integration for competitions, tournaments, matches, and player data"
  },
  "servers": [
    {
      "url": "https://api.sportradar.com/tennis/trial/v3",
      "description": "Sportradar Tennis Trial API"
    }
  ],
  "security": [
    {
      "apiKey": []
    }
  ],
  "components": {
    "securitySchemes": {
      "apiKey": {
        "type": "params",
        "in": "header",
        "name": "x-api-key"
      }
    },
    "schemas": {
      "Competition": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the competition"
          },
          "name": {
            "type": "string",
            "description": "Name of the competition"
          },
          "type": {
            "type": "string",
            "enum": ["singles", "doubles", "mixed"],
            "description": "Type of tennis competition"
          },
          "gender": {
            "type": "string",
            "enum": ["men", "women", "mixed"],
            "description": "Gender category of the competition"
          },
          "category": {
            "$ref": "#/components/schemas/Category"
          },
          "level": {
            "type": "string",
            "description": "Competition level (e.g., atp_250, wta_championships)"
          },
          "parent_id": {
            "type": "string",
            "description": "Parent competition identifier if applicable"
          }
        },
        "required": ["id", "name", "type", "gender", "category"]
      },
      "Category": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the category"
          },
          "name": {
            "type": "string",
            "description": "Name of the category (e.g., ATP, WTA, Challenger)"
          }
        },
        "required": ["id", "name"]
      },
      "CompetitionsResponse": {
        "type": "object",
        "properties": {
          "generated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the data was generated"
          },
          "competitions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Competition"
            }
          }
        },
        "required": ["generated_at", "competitions"]
      }
    }
  },
  "paths": {
    "/en/competitions.json": {
      "get": {
        "summary": "Get Tennis Competitions",
        "description": "Retrieve all tennis competitions including ATP, WTA, and other tournaments",
        "operationId": "getCompetitions",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompetitionsResponse"
                },
                "example": {
                  "generated_at": "2025-09-17T12:10:19+00:00",
                  "competitions": [
                    {
                      "id": "sr:competition:620",
                      "name": "Hopman Cup",
                      "type": "mixed",
                      "gender": "mixed",
                      "category": {
                        "id": "sr:category:181",
                        "name": "Hopman Cup"
                      }
                    },
                    {
                      "id": "sr:competition:660",
                      "name": "World Team Cup",
                      "type": "mixed",
                      "gender": "men",
                      "category": {
                        "id": "sr:category:3",
                        "name": "ATP"
                      },
                      "level": "atp_250"
                    },
                    {
                      "id": "sr:competition:990",
                      "name": "ATP Challenger Tour Finals",
                      "parent_id": "sr:competition:6239",
                      "type": "singles",
                      "gender": "men",
                      "category": {
                        "id": "sr:category:72",
                        "name": "Challenger"
                      }
                    },
                    {
                      "id": "sr:competition:1207",
                      "name": "Championship International Series",
                      "type": "singles",
                      "gender": "women",
                      "category": {
                        "id": "sr:category:6",
                        "name": "WTA"
                      },
                      "level": "wta_championships"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "429": {
            "description": "Too Many Requests"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "tags": ["Competitions"]
      }
    }
  },
  "tags": [
    {
      "name": "Competitions",
      "description": "Tennis competitions and tournaments"
    }
  ]
}
