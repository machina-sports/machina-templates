{
  "openapi": "3.0.0",
  "info": {
    "title": "Sportradar Tennis API",
    "version": "3.0.0",
    "description": "Sportradar Tennis API integration for competitions, tournaments, matches, and player data"
  },
  "servers": [
    {
      "url": "https://api.sportradar.com/tennis/trial/v3",
      "description": "Sportradar Tennis Trial API"
    }
  ],
  "security": [
    {
      "apiKey": []
    }
  ],
  "components": {
    "securitySchemes": {
      "apiKey": {
        "type": "params",
        "in": "header",
        "name": "x-api-key"
      }
    },
    "schemas": {
      "Competition": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the competition"
          },
          "name": {
            "type": "string",
            "description": "Name of the competition"
          },
          "type": {
            "type": "string",
            "enum": ["singles", "doubles", "mixed"],
            "description": "Type of tennis competition"
          },
          "gender": {
            "type": "string",
            "enum": ["men", "women", "mixed"],
            "description": "Gender category of the competition"
          },
          "category": {
            "$ref": "#/components/schemas/Category"
          },
          "level": {
            "type": "string",
            "description": "Competition level (e.g., atp_250, wta_championships)"
          },
          "parent_id": {
            "type": "string",
            "description": "Parent competition identifier if applicable"
          }
        },
        "required": ["id", "name", "type", "gender", "category"]
      },
      "Category": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the category"
          },
          "name": {
            "type": "string",
            "description": "Name of the category (e.g., ATP, WTA, Challenger)"
          }
        },
        "required": ["id", "name"]
      },
      "CompetitionsResponse": {
        "type": "object",
        "properties": {
          "generated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the data was generated"
          },
          "competitions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Competition"
            }
          }
        },
        "required": ["generated_at", "competitions"]
      },
      "CompetitionInfo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the competition"
          },
          "name": {
            "type": "string",
            "description": "Name of the competition"
          },
          "alternative_name": {
            "type": "string",
            "description": "Alternative name for the competition"
          },
          "type": {
            "type": "string",
            "enum": ["singles", "doubles", "mixed_doubles"],
            "description": "Type of tennis competition"
          },
          "gender": {
            "type": "string",
            "enum": ["men", "women", "mixed"],
            "description": "Gender category of the competition"
          },
          "level": {
            "type": "string",
            "description": "Competition level (e.g., grand_slam)"
          },
          "parent_id": {
            "type": "string",
            "description": "Parent competition identifier if applicable"
          },
          "category": {
            "$ref": "#/components/schemas/Category"
          },
          "children": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "competition": {
                  "$ref": "#/components/schemas/CompetitionInfo"
                }
              }
            }
          }
        },
        "required": ["id", "name", "type"]
      },
      "CompetitionInfoResponse": {
        "type": "object",
        "properties": {
          "generated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the data was generated"
          },
          "competition": {
            "$ref": "#/components/schemas/CompetitionInfo"
          }
        },
        "required": ["generated_at", "competition"]
      },
      "Season": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the season"
          },
          "name": {
            "type": "string",
            "description": "Name of the season"
          },
          "start_date": {
            "type": "string",
            "format": "date",
            "description": "Start date of the season"
          },
          "end_date": {
            "type": "string",
            "format": "date",
            "description": "End date of the season"
          },
          "year": {
            "type": "string",
            "description": "Year of the season"
          },
          "competition_id": {
            "type": "string",
            "description": "ID of the parent competition"
          }
        },
        "required": ["id", "name", "start_date", "end_date", "year", "competition_id"]
      },
      "CompetitionSeasonsResponse": {
        "type": "object",
        "properties": {
          "generated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the data was generated"
          },
          "seasons": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Season"
            }
          }
        },
        "required": ["generated_at", "seasons"]
      },
      "Competitor": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the competitor"
          },
          "name": {
            "type": "string",
            "description": "Name of the competitor"
          },
          "country": {
            "type": "string",
            "description": "Country of the competitor"
          },
          "abbreviation": {
            "type": "string",
            "description": "Abbreviation of the competitor name"
          },
          "gender": {
            "type": "string",
            "enum": ["male", "female"],
            "description": "Gender of the competitor"
          }
        },
        "required": ["id", "name", "country", "gender"]
      },
      "CompetitorInfo": {
        "type": "object",
        "properties": {
          "pro_year": {
            "type": "integer",
            "description": "Year the competitor turned professional"
          },
          "handedness": {
            "type": "string",
            "enum": ["left", "right"],
            "description": "Handedness of the competitor"
          },
          "highest_singles_ranking": {
            "type": "integer",
            "description": "Highest singles ranking achieved"
          },
          "highest_doubles_ranking": {
            "type": "integer",
            "description": "Highest doubles ranking achieved"
          },
          "weight": {
            "type": "integer",
            "description": "Weight of the competitor in kg"
          },
          "height": {
            "type": "integer",
            "description": "Height of the competitor in cm"
          },
          "date_of_birth": {
            "type": "string",
            "format": "date",
            "description": "Date of birth of the competitor"
          },
          "highest_singles_ranking_date": {
            "type": "string",
            "description": "Date when highest singles ranking was achieved"
          },
          "highest_doubles_ranking_date": {
            "type": "string",
            "description": "Date when highest doubles ranking was achieved"
          }
        }
      },
      "CompetitorRanking": {
        "type": "object",
        "properties": {
          "rank": {
            "type": "integer",
            "description": "Current ranking position"
          },
          "movement": {
            "type": "integer",
            "description": "Movement in ranking since last update"
          },
          "points": {
            "type": "integer",
            "description": "Ranking points"
          },
          "competitor_id": {
            "type": "string",
            "description": "Competitor identifier"
          },
          "name": {
            "type": "string",
            "description": "Name of the ranking system (e.g., WTA, ATP)"
          },
          "type": {
            "type": "string",
            "enum": ["singles", "doubles"],
            "description": "Type of ranking"
          },
          "race_ranking": {
            "type": "boolean",
            "description": "Whether this is a race ranking"
          }
        },
        "required": ["rank", "points", "competitor_id", "name", "type"]
      },
      "SurfaceStatistics": {
        "type": "object",
        "properties": {
          "competitions_played": {
            "type": "integer",
            "description": "Number of competitions played"
          },
          "competitions_won": {
            "type": "integer",
            "description": "Number of competitions won"
          },
          "matches_played": {
            "type": "integer",
            "description": "Number of matches played"
          },
          "matches_won": {
            "type": "integer",
            "description": "Number of matches won"
          }
        },
        "required": ["competitions_played", "competitions_won", "matches_played", "matches_won"]
      },
      "Surface": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["hardcourt_outdoor", "hardcourt_indoor", "grass", "red_clay", "red_clay_indoor", "unknown"],
            "description": "Type of surface"
          },
          "statistics": {
            "$ref": "#/components/schemas/SurfaceStatistics"
          }
        },
        "required": ["type", "statistics"]
      },
      "PeriodStatistics": {
        "type": "object",
        "properties": {
          "year": {
            "type": "integer",
            "description": "Year of the statistics"
          },
          "surfaces": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Surface"
            }
          },
          "statistics": {
            "$ref": "#/components/schemas/SurfaceStatistics"
          }
        },
        "required": ["year", "surfaces", "statistics"]
      },
      "CompetitionPlayed": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Competition identifier"
          },
          "name": {
            "type": "string",
            "description": "Competition name"
          },
          "parent_id": {
            "type": "string",
            "description": "Parent competition identifier"
          },
          "type": {
            "type": "string",
            "enum": ["singles", "doubles", "mixed"],
            "description": "Competition type"
          },
          "gender": {
            "type": "string",
            "enum": ["men", "women", "mixed"],
            "description": "Competition gender"
          },
          "level": {
            "type": "string",
            "description": "Competition level"
          }
        },
        "required": ["id", "name", "type", "gender"]
      },
      "CompetitorProfileResponse": {
        "type": "object",
        "properties": {
          "generated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the data was generated"
          },
          "competitor": {
            "$ref": "#/components/schemas/Competitor"
          },
          "info": {
            "$ref": "#/components/schemas/CompetitorInfo"
          },
          "competitor_rankings": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CompetitorRanking"
            }
          },
          "periods": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PeriodStatistics"
            }
          },
          "competitions_played": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CompetitionPlayed"
            }
          }
        },
        "required": ["generated_at", "competitor"]
      }
    }
  },
  "paths": {
    "/en/competitions.json": {
      "get": {
        "summary": "Get Tennis Competitions",
        "description": "Retrieve all tennis competitions including ATP, WTA, and other tournaments",
        "operationId": "getCompetitions",
        "parameters": [
          {
            "in": "header",
            "name": "x-api-key",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompetitionsResponse"
                },
                "example": {
                  "generated_at": "2025-09-17T12:10:19+00:00",
                  "competitions": [
                    {
                      "id": "sr:competition:620",
                      "name": "Hopman Cup",
                      "type": "mixed",
                      "gender": "mixed",
                      "category": {
                        "id": "sr:category:181",
                        "name": "Hopman Cup"
                      }
                    },
                    {
                      "id": "sr:competition:660",
                      "name": "World Team Cup",
                      "type": "mixed",
                      "gender": "men",
                      "category": {
                        "id": "sr:category:3",
                        "name": "ATP"
                      },
                      "level": "atp_250"
                    },
                    {
                      "id": "sr:competition:990",
                      "name": "ATP Challenger Tour Finals",
                      "parent_id": "sr:competition:6239",
                      "type": "singles",
                      "gender": "men",
                      "category": {
                        "id": "sr:category:72",
                        "name": "Challenger"
                      }
                    },
                    {
                      "id": "sr:competition:1207",
                      "name": "Championship International Series",
                      "type": "singles",
                      "gender": "women",
                      "category": {
                        "id": "sr:category:6",
                        "name": "WTA"
                      },
                      "level": "wta_championships"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "429": {
            "description": "Too Many Requests"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "tags": ["Competitions"]
      }
    },
    "/en/competitions/{competition_id}/info.json": {
      "get": {
        "summary": "Get Competition Information",
        "description": "Retrieve detailed information about a specific tennis competition including children competitions",
        "operationId": "getCompetitionInfo",
        "parameters": [
          {
            "in": "path",
            "name": "competition_id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the competition (e.g., sr:competition:2553)"
          },
          {
            "in": "header",
            "name": "x-api-key",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompetitionInfoResponse"
                },
                "example": {
                  "generated_at": "2025-09-17T19:47:11+00:00",
                  "competition": {
                    "id": "sr:competition:2553",
                    "name": "Wimbledon",
                    "children": [
                      {
                        "competition": {
                          "id": "sr:competition:2555",
                          "name": "Wimbledon Men Singles",
                          "parent_id": "sr:competition:2553",
                          "type": "singles",
                          "gender": "men",
                          "level": "grand_slam"
                        }
                      }
                    ],
                    "type": "singles",
                    "category": {
                      "id": "sr:category:3",
                      "name": "ATP"
                    },
                    "alternative_name": "Wimbledon"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Competition not found"
          },
          "429": {
            "description": "Too Many Requests"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "tags": ["Competitions"]
      }
    },
    "/en/competitions/{competition_id}/seasons.json": {
      "get": {
        "summary": "Get Competition Seasons",
        "description": "Retrieve all seasons for a specific tennis competition",
        "operationId": "getCompetitionSeasons",
        "parameters": [
          {
            "in": "path",
            "name": "competition_id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the competition (e.g., sr:competition:2555)"
          },
          {
            "in": "header",
            "name": "x-api-key",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompetitionSeasonsResponse"
                },
                "example": {
